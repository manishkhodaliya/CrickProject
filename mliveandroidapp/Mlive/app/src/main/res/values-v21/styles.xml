<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorAccent">@color/textcolorLogin</item>
        <item name="android:textColorPrimary">@color/textcolorLogin</item>
        <item name="android:colorBackground">@color/textcolorLogin</item>
        <item name="android:colorForeground">@color/textcolorLogin</item>
        <item name="android:textColorSecondary">@color/textcolorLogin</item>
        <item name="android:colorPrimaryDark">@color/textcolorLogin</item>
        <item name="android:navigationBarColor">@android:color/primary_text_dark</item>
        <item name="android:statusBarColor">@color/textcolorLogin</item>
    </style>


    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>
</resources>